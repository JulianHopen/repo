  <div>
    <form class="form" style="width: 33%" method="post" action="/updateuser">
      <div class="field">
        <div class="label">
          <label for="name">First name</label>
        </div>
        <div class="control">
          <input class="input" placeholder=" Lars" name="firstName" />
        </div>
        <div class="label">
          <label for="name">Last Name</label>
        </div>
        <div class="control">
          <input class="input" placeholder=" Nottingham" name="lastName" />
        </div>
        <div class="label">
          <label for="name">Phone number</label>
        </div>
        <div class="control">
          <input class="input" placeholder=" 00 000 000" name="phoneNumber" />
        </div>
        <div class="label">
          <label for="name">Address</label>
        </div>
        <div class="control">
          <input class="input" placeholder=" Rancho 00" name="address" />
        </div>
      </div>
      <button class="button mt-1" type="submit">Submit</button>
    </form>
  </div>
  <br /><br />
  <div>
    <table class="table is-bordered is-hoverable">
      <thead>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone number</th>
        <th>Address</th>
      </thead>
      <!-- Table data taking the stored data and sorting it with forEach and displaying based on the parameter and the corresponding database colomn name -->
      <tr>
        <% display.forEach(result => { %>
        <td><%= result.email %></td>
        <td><%= result.first_name %></td>
        <td><%= result.last_name %></td>
        <td><%= result.phone_number %></td>
        <td><%= result.address %></td>
      </tr>
      <% }) %>
    </table>
  </div>
  <br /><br />
